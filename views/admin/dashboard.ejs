<main class="container mt-5">
    <h1>Hello admin, <%= user.username %>!</h1>
    <div class="row">
      <!-- Users Card -->
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Users</h5>
            <p class="card-text">Total users: <%= totalUsers %></p>
            <a href="/admin/users" class="btn btn-primary">Manage Users</a>
          </div>
        </div>
      </div>
      
      <!-- Products Card -->
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Products</h5>
            <p class="card-text">Total products: <%= totalProducts %></p>
            <a href="/admin/products" class="btn btn-primary">Manage Products</a>
          </div>
        </div>
      </div>
    </div>
  </main>