<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title><%= title %></title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid justify-content-between">
        <a class="navbar-brand" href="#">Mon magasin</a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/shop/products">Products</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/shop/cart">Cart</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/shop/checkout">Checkout</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="javascript:void(0);" id="logoutLink"
                >Logout</a
              >
            </li>
          </ul>
        </div>
      </div>
      <script>
        function logout() {
          fetch("/user/logout")
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                localStorage.clear(); // Clear local storage
                window.location.href = "/user/login"; // Redirect to login page
              }
            })
            .catch((error) => {
              console.error("Error during logout:", error);
              window.location.href = "/dashboard"; // Redirect to dashboard on error
            });
        }

        // Attach the logout function to the logout link
        document.getElementById("logoutLink").addEventListener("click", logout);
      </script>
    </nav>
    <main class="container mt-5"><%- body %></main>
  </body>
</html>
