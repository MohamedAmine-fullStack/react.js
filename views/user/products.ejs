<!-- views/dashboard.ejs -->
<h1 class="mb-4">Our Products</h1>
<!-- <p><%= products %></p> -->
<div class="container">
  <div class="row">
    <% for(let index = 0; index < products.length; index++) { %>
    <div class="col-md-4 mb-4">
      <div class="card" style="width: 100%">
        <img
          src="<%= products[index].image %>"
          class="card-img-top"
          alt="<%= products[index].name %>"
        />
        <div class="card-body">
          <h5 class="card-title"><%= products[index].name %></h5>
          <p class="card-text"><%= products[index].description %></p>
          <p class="fw-bold">$<%= products[index].price %></p>
          <button
            class="btn btn-primary"
            onclick="addToCart('<%= products[index]._id %>', '<%= products[index].name %>', '<%= products[index].price %>')"
          >
            Add to Cart
          </button>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
<script>
  function addToCart(productId, productName, productPrice) {
    // Get the existing cart from local storage
    let cart = JSON.parse(localStorage.getItem("cart")) || {};

    // Check if the product already exists in the cart
    if (cart[productId]) {
      // Increment the quantity if the product already exists
      cart[productId].quantity += 1;
    } else {
      // Add the product to the cart with quantity 1
      cart[productId] = {
        name: productName,
        price: productPrice,
        quantity: 1,
      };
    }

    // Save the updated cart back to local storage
    localStorage.setItem("cart", JSON.stringify(cart));

    // Optional: Display a message or update the cart UI
    alert(`${productName} has been added to your cart.`);
  }
</script>
